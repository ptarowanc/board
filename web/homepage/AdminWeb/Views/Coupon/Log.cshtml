
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>

    .toolbar {
        float: left;
    }
</style>
<h2>쿠폰 내역</h2>

<table id="DataTable" class="table table-striped table-bordered table-sm table-hover">
    <colgroup>
        <col style="width : 14%" />
        <col style="width : 14%" />
        <col style="width : 14%" />
        <col style="width : 14%" />
        <col style="width : 14%" />
        <col style="width : 14%" />
        <col style="width : 14%" />
    </colgroup>
    <thead>
        <tr>
            <th>쿠폰ID</th>
            <th>시리얼</th>
            <th>지급머니</th>
            <th>생성날짜</th>
            <th>사용날짜</th>
            <th>사용 회원</th>
            <th>회원닉네임</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>

@section scripts
{
    <script type="text/javascript">

        $(document).ready(function () {

            var dataTable = $("#DataTable").DataTable({
                info: false,
                processing: true,
                serverSide: true,
                paging: true,
                language: {
                    "url": "http://cdn.datatables.net/plug-ins/1.10.16/i18n/Korean.json"
                },
                columns: [
                    { "data": "Id", "orderable": true },
                    { "data": "Serial", "orderable": true },
                    { "data": "Pay", "orderable": true },
                    { "data": "CreateDate", "orderable": true },
                    { "data": "UseDate", "orderable": true },
                    { "data": "PlayerID", "orderable": true },
                    { "data": "NickName", "orderable": true }
                ],
                /*
                columnDefs: [
                    { targets: -1, data: null, defaultContent: "<button class=\"btn btn-sm edit\">수정</button>" }
                ],*/
                ajax: {
                    type: "POST",
                    contentType: "application/json; charset=utf-8",
                    url: "@Url.Action("CouponLog")",
                    data: function (d) {
                        return JSON.stringify({ parameters: d });
                    }
                },
                select: true,
                "order": [[4, "desc"]]
            });
        });

    </script>
}

