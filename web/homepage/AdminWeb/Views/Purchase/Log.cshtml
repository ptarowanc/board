
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>

    .toolbar {
        float: left;
    }
</style>
<h2>구매 내역</h2>

<table id="DataTable" class="table table-striped table-bordered table-sm table-hover">
    <colgroup>
        <col style="width : 16%" />
        <col style="width : 16%" />
        <col style="width : 16%" />
        <col style="width : 16%" />
        <col style="width : 16%" />
        <col style="width : 16%" />
    </colgroup>
    <thead>
        <tr>
            <th>구매 날짜</th>
            <th>상품명</th>
            <th>가격</th>
            <th>구매한 회원</th>
            <th>회원 닉네임</th>
            <th>구매 위치</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>

@section scripts
{
    <script type="text/javascript">

        $(document).ready(function () {

            var dataTable = $("#DataTable").DataTable({
                info: false,
                processing: true,
                serverSide: true,
                paging: true,
                language: {
                    "url": "http://cdn.datatables.net/plug-ins/1.10.16/i18n/Korean.json"
                },
                columns: [
                    { "data": "Date", "orderable": true },
                    { "data": "pname", "orderable": true },
                    { "data": "price", "orderable": true },
                    { "data": "PlayerID", "orderable": true },
                    { "data": "NickName", "orderable": true },
                    {
                        "data": "Location",
                        "orderable": true,
                        "render": function (data, type, row) {
                            if (data == "web")
                                return "홈페이지";
                            else if (data == "mobile")
                                return "모바일";
                            else
                                return data;
                        }
                    }
                ],
                /*
                columnDefs: [
                    { targets: -1, data: null, defaultContent: "<button class=\"btn btn-sm edit\">수정</button>" }
                ],*/
                ajax: {
                    type: "POST",
                    contentType: "application/json; charset=utf-8",
                    url: "@Url.Action("PurchaseLog")",
                    data: function (d) {
                        return JSON.stringify({ parameters: d });
                    }
                },
                select: true,
                "order": [[0, "desc"]]
            });
        });

    </script>
}

